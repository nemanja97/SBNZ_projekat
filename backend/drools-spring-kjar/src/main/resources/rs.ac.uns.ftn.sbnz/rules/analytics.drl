import java.util.List;

rule "Lower property price if there is no interest in it"
    when
        $p: Property(
            $id: id,
        );
        not(
            $ev: MoreInfoClickedEvent(id == $id)
            over window:time(14d)
        )
    then
        System.out.println(String.format("No interest in %s", $ps.getProperty().getId()));
end